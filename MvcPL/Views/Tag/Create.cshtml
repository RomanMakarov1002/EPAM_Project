@model MvcPL.Models.SimpleTagViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create tag</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="col-md-offset-2">
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name, new {@class = "form-control", @required = "true"})
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div>
            <p>
                <input type="submit" value="Create" class="form-control" />
            </p>
        </div>
        
    </fieldset>
}

<div>
    @Html.ActionLink("Back to tags", "Index")
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

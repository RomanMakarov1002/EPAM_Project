@model MvcPL.Models.FullCommentViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this comment?</h3>

    @using (@Html.BeginForm("Delete", "Comment", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ArticleId)
        @Html.HiddenFor(model => model.DateTime)
        <div class="panel panel-default col-md-offset-2  col-md-6" id="@Model.Id">
            <div class="panel-body">
                <img style="width: 50px; height: 50px;" src=@Model.User.AvatarPath alt="No avatar" />
                <span style="font-size: 12px;">@Model.User.Name </span>
                <span style="font-size: 12px;"> @Model.DateTime</span>
                <div class="form-group">
                    <label class="col-md-2 control-label">Comment</label>
                    <div>
                        <span style="word-wrap: break-word">@Model.Text</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2">
                        <input type="submit" class="btn btn-primary" value="Delete" />
                    </div>
                </div>
            </div>
        </div>
    }

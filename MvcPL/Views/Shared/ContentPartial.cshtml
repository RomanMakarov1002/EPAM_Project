@model MvcPL.Models.PagingViewModel<MvcPL.Models.FullArticleViewModel>

@foreach (var article in Model.Items)
{
    <div class="well">
        <div class="media">
            <a class="pull-left" href=@Url.Action("Details", "Article", new {id = article.Id})>
                <img class="media-object" src=@article.TitleImage width="150px" height="150px">
            </a>
            <div class="media-body">
                <div>
                    @foreach (var tag in article.Tags)
                    {
                        <a href="@Url.Action("SortedByTag", "Article", new {id = tag.Id})" class="btn btn-success btn-xs">@tag.Name</a>
                    }
                </div>
                <h2 class="media-heading">
                    <a href="@Url.Action("Details", "Article", new {id = article.Id})" style="color: inherit">@article.Title </a>
                </h2>
                <ul class="list-inline">
                    <li><span><i class="glyphicon glyphicon-calendar"></i> @article.CreationTime</span></li>
                    <li>|</li>
                    <li><span><i class="glyphicon glyphicon-user"></i> @article.User.NickName</span></li>
                    <li>|</li>
                    <li><span><i class="glyphicon glyphicon-comment"></i> @article.Comments.Count() </span></li>
                    <li>|</li>
                    <a href="@Url.Action("Index", "Blog", new {id = @article.Blog.Id})" class="btn btn-danger btn-xs">@article.Blog.Name</a>
                </ul>
                <div style="max-height: 400px; overflow: hidden">
                    @article.Text
                </div>
            </div>
        </div>
    </div>
}
